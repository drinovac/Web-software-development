    <% for (var c of categories) {%>

    <section class="section secondary-color-bg">
        <div class="centered-container <% if(c.id % 2 == 0) {%> primary-color-bg <% } %>">
            <h1 class="decorated-title font-secondary main-color">
                <span class="main-color-emphasized"><%=c.name%></span>
                Inventory
            </h1>
            <div class="separator"></div>
            <% if (c.inventory.length == 0) {%>
                <div class="centered-container">
                    <span class="photo-box-title font-secondary main-color">
                        No items in this category
                    </span>
                </div>
            <% } else { %>
                <div class="gallery">
                    <% for (var x of c.inventory) {%>
                        <div class="photo-box">
                            <img class="photo-box-image" src="<%=x.imageurl%>"></img>
                            <div class="photo-box-title font-secondary main-color">
                                <a href="/item/<%=x.id%>" class="link">
                                    <%=x.name%>
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </section>
    <% } %>
</main>

<%- include(`partials/footer`); %>

